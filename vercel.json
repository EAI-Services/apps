 {
    "version": 2,
    "public": true,
    "builds": [
      {
        "src": "index.js",
        "use": "@vercel/node",
        "config": {
          "maxDuration": 30 
        }
      },
      {
        "src": "public/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/((?!.*\\.\\w+$).*)",
        "dest": "index.js"
      },
      {
        "src": "/(.+\\.[a-z]+)$",
        "dest": "/public/$1"
      }
    ],
     
    "crons": [
      {
        "path": "/index/cron",
        "schedule": "58 23 * * 0"
      },
      {
        "path": "/index/cron",
        "schedule": "59 23 * * 0"
      }
    ]
    
  }